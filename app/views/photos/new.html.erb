<div class="container">
	<h1>Add a photo</h1>
	<%= form_for [@post, @photo] do |f| %>
	
	  <div class="field">
	    <%= f.label :photo_date %><br />
	    <%= f.date_field :photo_date %>
	  </div>
	
	  <div class="field">
	    <%= f.label :image %><br />
	    <%= f.file_field :image %><br />
	  </div>
		<br />
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
</div>
<div class="container">
  <div class ="nav_links">
		<%= link_to 'Home', posts_path %>
	</div>
	<div class ="log_in">
		<% if current_user != nil %>
			Signed in as: <%= current_user.email %>
		<% end %>
	</div>
</div>