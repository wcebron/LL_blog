<div class = "container">
  <%= render 'layouts/navbar' %>
</div>

<div class = "container">
	<h1>Enter your user name</h1>

	<%= form_for @user do |f| %>
		<%= f.text_field :email, placeholder: "Email" %> <br />
		<%= f.text_field :bio, placeholder: "Short Bio" %> <br />
		<%= f.password_field :password, placeholder: "Password" %> <br />
		<%= f.password_field :password_confirmation, placeholder: "Confirm Password" %> <br />
		<%= f.file_field :avatar %><br />
		<%= f.submit %>
	<% end %>
</div>

  <div class ="nav_links">
		<%= link_to 'Home', posts_path %>
	</div>
	<div class ="log_in">
			<% if current_user != nil %>
			Signed in as: <%= current_user.email %>
			<% end %>
	</div>
