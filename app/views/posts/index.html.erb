<div class = "container">
  <%= render 'layouts/navbar' %>
</div>

<div class="container">
  <div class="row clearfix">

    <div class="column two-thirds">
      <div id="slider1_container" style="position: relative; top: 0px; left: 0px; width: 600px; height: 400px; overflow: hidden;">
          <!-- Slides Container -->
        <div u="slides" style="cursor: move; position: absolute; overflow: hidden; left: 0px; top: 0px; width: 600px; height: 400px;">
            <div><a u="image" href="../posts/1"><img src="../../assets/guitar.jpg"/></a></div>
            <div><a u="image" href="../posts/2"><img src="../../assets/brains.jpg"/></a></div>
            <div><a u="image" href="../posts/3"><img src="../../assets/john_mayer.jpg"/></a></div>
            <div><a u="image" href="../posts/4"><img src="../../assets/piano.jpg"/></a></div>
        </div>
          <!-- Arrow Navigator Skin Begin -->
           <span u="arrowleft" class="jssora02l"
            style="width: 55px; height: 55px; top: 122px; left: 8px;">
            </span>
            <!-- Arrow Right -->
            <span u="arrowright" class="jssora02r"
            style="width: 55px; height: 55px; top: 122px; right: 8px;">
            </span>
           <!-- Arrow Navigator Skin End -->
      </div>
    </div>

    <div class="column third">
      <div id="t1"> Popular Topics:
      </div>
      <% @post1.each do |post|%>
