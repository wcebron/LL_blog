        <div class="left_trending">
          <div class="numberCircle1">
          </div>
        </div>
        <div class="right_trending">
          <div class="category">
            <%= post.category %> <br />
          </div>
          <div class="title">
            <%= post.title %>
          </div>
        </div>
      </div>
        <% end %>
    </div>
  </div>

  <br />
  <div class="row clearfix">
    <div class = "bottom_bar">
