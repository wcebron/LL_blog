        <div class="left_trending">
          <div class="numberCircle1">
          </div>
        </div>
        <div class="right_trending">
          <div class="category">
            <%= post.category %> <br />
          </div>
          <div class="title">
            <%= post.title %>
          </div>
        </div>
      </div>
        <% end %>
    </div>
  </div>

  <br />
  <div class="row clearfix">
    <div class = "bottom_bar">
      <div class="column fourth">
        <div class= "last_top" id="blog1">
        </div>
        <div class="last_bottom1">
          <div class="title_bottom">Learning violin today</div>
          <div class="teaser">Figuring out how our brains work is key to understanding</div>
        </div>
      </div>
      <div class="column fourth">
        <div class= "last_top" id="blog2">
        </div>
        <div class="last_bottom2">
          <div class="title_bottom">Summertime Living</div>
          <div class="teaser">Get outside and enjoy your life. Tips for a great summer!</div>
        </div>
      </div>
      <div class="column fourth">
        <div class= "last_top" id="blog3">
        </div>
        <div class="last_bottom1">
          <div class="title_bottom">Taking advantage of bad weather</div>
          <div class="teaser">A list of the best things to do when the weather is crummy</div>
        </div>
      </div>
      <div class="column fourth">
        <div class= "highlight_top">
          The sunglasses that make the world look like Instagram
        </div>
        <div class="highlight_bottom">
          <div class="author">By Jason Hunt</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class = "container">
  <%= render 'layouts/footer' %>
</div>





