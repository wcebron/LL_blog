<div class = "container">
  <%= render 'layouts/navbar' %>
</div>

<div class="container">
  <div class="row clearfix">

    <div class="column two-thirds">
    <div class="hero">   <!-- img src="post.photos.last.image(url)" -->
      </div>
    </div>

    <div class="column third">
      <div id="t1"> Popular Topics:
      </div>
      <% @post1.each do |post|%>
